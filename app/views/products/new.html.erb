<form action="/products"
      method="post"
      data-turbo="false">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <div>
    <label for="title">Title</label>
    <input name="title" type="text" id="title" class="border-2 border-black">
  </div>

  <div>
    <label for="description">Description</label>
    <textarea name="description" id="description" class="border-2 border-black"></textarea>
  </div>

  <div>
    <label for="price">Price</label>
    <input name="price" type="number" id="price" min="0" class="border-2 border-black">
  </div>

  <button class="bg-red-300">新增</button>
</form>
